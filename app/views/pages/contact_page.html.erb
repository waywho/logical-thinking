<h1><%= @page.title %></h1>

<br />

<div>
<p>
<%= @page.introduction.content.html_safe if @page.introduction.content.present? %>
</p>
<p>
<%= @page.body.content.html_safe if @page.body.content.present? %>
</p>

<div>
    <%= simple_form_for @message, url: send_message_path, method: :post do |f| %>
        <%= f.input :name %>
        <%= f.input :email %>
        <%= f.input :body, label: 'message' %>
        <br />
        <%= f.submit :send, :class => 'button' %>
    <% end %>
</div>